{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "jsx": "react",
        "allowJs": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./yarn/@types", "./node_modules/@types"],
        "skipLibCheck": true,
        "types": [
            "body-parser",
            "bonjour",
            "connect",
            "connect-history-api-fallback",
            "eslint",
            "eslint-scope",
            "estree",
            "express",
            "express-serve-static-core",
            "hoist-non-react-statics",
            "html-minifier-terser",
            "http-errors",
            "http-proxy",
            "json-schema",
            "node",
            "node-forge",
            "prop-types",
            "qs",
            "range-parser",
            "react",
            "react-dom",
            "retry",
            "send",
            "serve-index",
            "serve-static",
            "sockjs",
            "ws"
        ]
    },
    "include": ["./types/imgnx.d.ts", "./src/**/*"]
}
